<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.laioffer.laiofferproject.BackendListFragment">

    <LinearLayout
        android:id="@+id/backend_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/restuarantimg"
            android:orientation="vertical"
            android:paddingLeft="150dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Item"
                android:textColor="#FBAF41" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommendation"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <ListView
            android:id="@+id/backend_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F2EBD9"></ListView>
    </LinearLayout>

</FrameLayout>
